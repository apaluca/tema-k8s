{#
/**
 * @file
 * Kubernetes theme's implementation to display a single Drupal page.
 */
#}
<!DOCTYPE html>
<html{{ html_attributes }}>
<head>
    <head-placeholder token="{{ placeholder_token }}">
    <title>{{ head_title|safe_join(' | ') }}</title>
    <css-placeholder token="{{ placeholder_token }}">
    <js-placeholder token="{{ placeholder_token }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body{{ attributes }}>
    <a href="#main-content" class="visually-hidden focusable skip-link">
        {{ 'Skip to main content'|t }}
    </a>
    {{ page_top }}
    
    <header role="banner">
        <div class="container">
            {{ page.header }}
            {% if main_menu %}
                <nav role="navigation" aria-labelledby="main-menu">
                    <h2 id="main-menu" class="visually-hidden">{{ 'Main menu'|t }}</h2>
                    {{ main_menu }}
                </nav>
            {% endif %}
        </div>
    </header>

    {% if page.highlighted %}
        <section class="highlighted">
            <div class="container">
                {{ page.highlighted }}
            </div>
        </section>
    {% endif %}

    {% if breadcrumb %}
        <section class="breadcrumb-section">
            <div class="container">
                {{ breadcrumb }}
            </div>
        </section>
    {% endif %}

    <main role="main" id="main-content" tabindex="-1">
        <div class="container">
            {% if messages %}
                <section class="messages-section">
                    {{ messages }}
                </section>
            {% endif %}

            <div class="main-content">
                {% if page.sidebar_first %}
                    <aside class="sidebar-first" role="complementary">
                        {{ page.sidebar_first }}
                    </aside>
                {% endif %}

                <div class="content-area">
                    {% if page.content %}
                        {{ page.content }}
                    {% endif %}
                </div>

                {% if page.sidebar_second %}
                    <aside class="sidebar-second" role="complementary">
                        {{ page.sidebar_second }}
                    </aside>
                {% endif %}
            </div>
        </div>
    </main>

    {% if page.footer %}
        <footer role="contentinfo">
            <div class="container">
                {{ page.footer }}
                <p>&copy; {{ "now"|date("Y") }} Kubernetes Demo Site - Powered by Drupal, Node.js, Vue.js & Azure AI</p>
            </div>
        </footer>
    {% endif %}

    {{ page_bottom }}
    <js-bottom-placeholder token="{{ placeholder_token }}">
</body>
</html>